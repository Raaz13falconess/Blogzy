<%- include('../views/layouts/header.ejs') %>

<!-- Page Content-->
<div class="container px-4 px-lg-5">
    <!-- Heading Row-->

    <%
        if(posts_taken.length >0 ) {
            for(let i=0; i<posts_taken.length; i++) {
                %>
                <div class="row gx-4 gx-lg-5 align-items-center my-5">
                    <div class="col-lg-7">
                        <% 
                            if(posts_taken[i].image!=undefined && posts_taken[i].image!='') {
                                %>
                                <img class="img-fluid rounded mb-4 mb-lg-0" src="<%= posts_taken[i].image %>" alt="..." />
                                <%
                            } 
                            else {
                                %> 
                                <img class="img-fluid rounded mb-4 mb-lg-0" src="https://dummyimage.com/900x400/dee2e6/6c757d.jpg" alt="..." />
                                <%
                            }
                        %>
                    </div>
                    <div class="col-lg-5">
                        <h1 class="font-weight-light"><%= posts_taken[i].title %> </h1>
                        <p> <%= posts_taken[i].content %> </p>
                        <a class="btn btn-primary" href="/post/<%= posts_taken[i]._id %>"> Read More</a>
                    </div>
                </div>
                <%
            }
            
        }
        else {
            %>
                <h1> Posts not Available</h1>
            <%
        }
    %>

    


</div>

<%- include('../views/layouts/footer.ejs') %>